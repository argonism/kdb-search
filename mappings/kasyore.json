{
    "settings": {
        "index": {
            // "similarity": {
            //     "default": {
            //         "type": "BM25",
            //         "b": 0.75,
            //         "k1": 2
            //     }
            // },
            "analysis": {
                "filter": {
                    "posfilter": {
                        "type": "sudachi_part_of_speech",
                        "stoptags": [
                            "助詞",
                            "助動詞",
                            "補助記号,句点",
                            "補助記号,読点"
                        ]
                    },
                    "romaji_readingform": {
                        "type": "sudachi_readingform",
                        "use_romaji": true
                    },
                    "katakana_readingform": {
                        "type": "sudachi_readingform",
                        "use_romaji": false
                    }
                },
                "tokenizer": {
                    "sudachi_tokenizer": {
                        "type": "sudachi_tokenizer",
                        "split_mode": "C",
                        "discard_punctuation": true
                    }
                },
                "analyzer": {
                    "sudachi_analyzer": {
                        "filter": [
                            "sudachi_baseform",
                            "posfilter",
                            "sudachi_normalizedform"
                        ],
                        "tokenizer": "sudachi_tokenizer",
                        "type": "custom"
                    }
                },
                "romaji_analyzer": {
                    "tokenizer": "sudachi_tokenizer",
                    "filter": [
                        "romaji_readingform"
                    ]
                },
                "katakana_analyzer": {
                    "tokenizer": "sudachi_tokenizer",
                    "filter": [
                        "katakana_readingform"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "vec": {
                "type": "dense_vector",
                "dims": 768,
                "index": true,
                "similarity": "dot_product",
                "index_options": {
                    "type": "hnsw",
                    "m": 15,
                    "ef_construction": 50
                }
            },
            "docid": {
                "type": "integer"
            },
            "title": {
                "type": "text",
                "analyzer": "sudachi_analyzer"
            },
            "body": {
                "type": "text",
                "analyzer": "sudachi_analyzer"
            },
            "created_at": {
                "type": "date"
            },
            "updated_at": {
                "type": "date"
            }
        }
    }
}